{
  "name": "raccoon-kb-mvp",
  "version": "0.1.0",
  "private": true,
  "description": "商汤小浣熊知识库社区平台 MVP",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @raccoon-kb/db migrate",
    "db:push": "pnpm --filter @raccoon-kb/db push",
    "db:studio": "pnpm --filter @raccoon-kb/db studio"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "pnpm": "^9.15.4",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
